.intro
  position absolute
  width 100%
  height 100%
  z-index 4
  
  #logo-svg
    position absolute
    top 50%;
    left 50%
    transform translateX(-50%) translateY(-50%)
    z-index 4
    transition transform 1s easeInOutExpo;
    pointer-events none
    
    path
      shape-rendering crispEdges
      
  .title
    position absolute
    top 50%
    left 50%
    transform translateX(-50%) translateY(-50%)
    margin-top 20%
    text-align center
    
  .title-year
    opacity 0
    font-family "RobotoMonoMedium"
    color #fff
    font-size 10px
    transition opacity 1s easeOutExpo;

  .chinese-title
    opacity 0
    font-size 40px
    font-family "JingLi"
    color #fff
    text-align center
    margin-bottom 20px
    transition opacity 1s easeOutExpo;
    
  .title.show
    p.title-year
      opacity 0.4
    p.chinese-title
      opacity 0.3