.monkey
  position absolute
  width 100%
  height 100%
  z-index 0
  
  .title
    font-size 10px
    font-family "RobotoMonoMedium"
    position absolute
    color #fff
    opacity 0
    top 50%
    left 50%
    transform translateX(-50%) translateY(-50%)
    margin-top 20%
    transition opacity 1s easeOutExpo;
    
  .title.show
    opacity 0.4