.layout
  
  .background
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color #000
    transform translate3D(0,-100%,0)
    transition transform 0.75s easeOutExpo
    
  path 
    shape-rendering crispEdges

  #plane
    position absolute
    z-index 2
    top 50%
    left 50%
    transform translateX(-50%) translateY(-50%)
    
  #pages
    position absolute
    z-index 2
    width 100%
    height 100%


.layout.animation-in
  .background
    transform translate3D(0,0,0)
  